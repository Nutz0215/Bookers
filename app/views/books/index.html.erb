<% if flash[:delete_message] %>
<div class='flash'>
    <%= flash[:delete_message] %>
</div>
<% end %>
<h1>Books</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan = '3'></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td width='200'><%= book.title %></td>
                <td width='400'><%= book.body %></td>
                <td width='25'><%= link_to 'Show', book_path(book.id) %></td>
                <td width='25'><%= link_to 'Edit', edit_book_path(book.id) %></td>
                <td width='25'><%= link_to 'Destroy', book_path(book.id), method: :delete,'data-confirm'=> 'Are you sure?' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

<div>
    <h2>New Book</h2>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class='error-message'><%= message %></li>
        <% end %>
    </ul>
<% end %>
    <%= form_with model: @book do |f| %>
    <div>Title</div>
    <%= f.text_field :title %>
    
     <div>Body</div>
    <%= f.text_area :body %>
    <div><%= f.submit 'Create Book' %></div>
    <% end %>
</div>